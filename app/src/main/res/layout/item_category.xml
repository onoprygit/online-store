<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="11dp"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/categoryIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_category_phones"
        app:contentPaddingTop="20dp"
        app:contentPaddingBottom="20dp"
        app:contentPaddingStart="26dp"
        app:contentPaddingEnd="26dp"
        android:background="@drawable/background_category_image"
        />

    <TextView
        android:id="@+id/categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/categoryIcon"
        app:layout_constraintEnd_toEndOf="@id/categoryIcon"
        app:layout_constraintTop_toBottomOf="@id/categoryIcon"
        tools:text="Phones"
        android:textColor="@color/font_main"
        android:layout_marginTop="7dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>